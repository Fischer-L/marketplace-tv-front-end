/**
 * Offline styles.
 */

@import 'lib';

.offline-container {
    width: 100%;
    height: 100%;

    background-image: url('../img/bg_loading_error.png');
}

.offline-description,
.offline-control {
    position: absolute;
    left: 50%;

    width: 100rem;
    margin-left: -50rem;

    text-align: center;
}

.offline-description {
    top: 46rem;

    font-style: italic;

    color: $greyscale-white;

    .title,
    .content {
        display: block;
    }

    .title {
        margin-bottom: .3rem;

        font-size: 5.2rem;
        line-height: 5.2rem;
    }

    .content {
        font-size: 2.6rem;
        line-height: 3.6rem;
    }
}

.offline-control {
    top: 70.6rem;
}

.offline-button {
    margin: 0 2rem;

    font-family: $primary-font-family;
}
