/**
 * App listing styles.
 */

@import 'lib';

$app-list-background-color = #CBCDCD;

.app-list {
    position: absolute;
    top: $app-preview-height;
    bottom: 0;
    left: 0;

    width: 100%;
    overflow: auto;

    background-color: $app-list-background-color;

    ul {
        padding: 6rem 11.6rem .2rem;
    }

    li {
        float: left;
        margin: 0 2.6rem 5.8rem;

        list-style: none;
    }
}

.app-list-app {
    position: relative;

    width: 18.9rem;
    height: 18.9rem;
    border-radius: 50%;
    -moz-outline-radius: 60%;
    outline: 0;
    overflow: hidden;

    color: $greyscale-light-grey;
    background-color: $greyscale-light-grey;

    backface-visibility: hidden;

    transition-property: all;
    transition-timing-function: cubic-bezier(.25, 0, 0, 1);
    transition-duration: .42s;

    &.focused {
        outline: .8rem solid $greyscale-white;

        transform: scale(1.4);
    }

    &.pressed {
        outline: 1rem solid $greyscale-white;

        transform: scale(1.22);

        transition-duration: .06s;
    }

    &.released {
        transition-duration: .16s;
    }

    img {
        width: 100%;
        height: auto;
    }

    .name {
        position: absolute;
        bottom: 0;
        left: 0;

        width: 100%;
        height: 6rem;
        padding-top: 1rem;

        font-size: 1.6rem;
        font-style: italic;
        line-height: 2.2rem;
        text-align: center;

        color: $greyscale-white;
        background-color: rgba(0, 0, 0, .4);
    }
}
